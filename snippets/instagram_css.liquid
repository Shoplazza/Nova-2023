{% stylesheet %}
  .ins_titie {
    font-size: 19.2px;
  }
  .ins_grid {
    display: grid;
  }
  .ins_item {
    border: 1px solid #e6e6e6;
    padding: 12px;
  }
  .ins_user-image {
    flex-shrink: 0;
    width: 36px;
    height: 36px;
    padding: 2px;
    overflow: hidden;
    border-radius: 100%;
    background-image: linear-gradient(to top, #f89548, #cc2f85);
  }
  .ins_user-image .ins__user-icon {
    background-color: white;
    border-radius: 100%;
  }

  .ins_user-image .ins__user-icon > svg {
    padding: 2px;
  }

  .ins_user-info {
    margin-left: 12px;
  }
  .ins__feedback-content {
    text-overflow: ellipsis;
    -webkit-line-clamp: 5;
    -webkit-box-orient: vertical;
    margin-top: 5px;
  }
  .ins_comments,
  .ins_likes {
    height: 20px !important;
  }
  .ins_comments-icon {
    margin-right: 6px;
  }
  .grid-cols-1 {
    grid-template-columns: repeat(1, minmax(0, 1fr));
    column-gap: 16px;
    row-gap: 16px;
  }

  .ins_body {
    align-content: start;
  }
  
  .ins_more_hidden .ins_item_hidden {
    display: block;
  }
  .ins_item_hidden {
    display: none;
  }
  
  @media (max-width: 959.98px) {
    .ins_grid-carousel .ins_item,
    .ins_grid-carousel .i-spzhtml-slides-container,
    .ins_grid-carousel .i-spzhtml-slide-item {
      width: calc((100vw - 32px) / 3 * 2);
    }
    .md\:ins_grid .i-spzhtml-slide-item {
      padding-right: 16px;
    }
  }
  @media (min-width: 960px) {
    .ins_grid {
      grid-row-gap: 20px;
      column-gap: 20px;
    }
    .lg\:grid-cols-4 {
      grid-template-columns: repeat(4, minmax(0, 1fr));
    }

    .lg\:w-1\/3 .ins_body {
      width: calc(100% / 3);
    }
    .lg\:w-1\/4 .ins_body {
      width: calc(100% / 4);
    }
    .lg\:w-1\/5 .ins_body {
      width: calc(100% / 5);
    }
    .lg\:ins_grid .i-spzhtml-slide-item {
      display: grid;
      column-gap: 16px;
    }
  }
  {% if shop.locale == 'ar-SA' %}
    .ins_user-info {
      margin-left: 0;
      margin-right: 12px;
    }
  {% endif %}
{% endstylesheet %}
