<a class="shipment-product-image flex-shrink-0 relative flex mb-3 rounded-global-fixed overflow-hidden" href="${product.product_url}" data-track="link-to-product" data-track-product-url="${product.product_url}">
  <spz-img
    class="lg:hidden ${productCount === 1 ? 'hidden' : ''}"
    layout="fixed"
    width="64"
    height="64"
    src="${product.image.src}"
    alt="${product.image.alt || product.product_title}"
    object-fit="cover"
    auto-fit
  ></spz-img>
  <spz-img
    class="${productCount === 1 ? '' : 'md:hidden'}"
    layout="fixed"
    width="72"
    height="108"
    src="${product.image.src}"
    alt="${product.image.alt || product.product_title}"
    object-fit="cover"
    auto-fit
  ></spz-img>
  <div class="shipment-product-qty text-xs leading-none ${showStatus ? 'lg:hidden' : ''}" spz-if="${product.ship_quantity > 1 || (showStatus && product.quantity > 1)}">x${product.ship_quantity || product.quantity}</div>
</a>