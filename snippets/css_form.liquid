<style>
  .form_item {
    position: relative;
    width: 100%;
    margin-top: 16px;
  }
  .form_input,
  .form_select {
    padding: 16px 15px;
    transition: all 400ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
    width: 100%;
    height: 52px;
    margin: 0;
    font-size: 14px;
    line-height: 18px;
    color: var(--color-body-text);
    border: 1px solid var(--color-border);
    background-color: transparent;
    outline: 0;
  }
  .form_input[has-value] {
    padding-top: 27px;
    padding-bottom: 7px;
  }
  .form_label {
    position: absolute;
    top: 17px;
    left: 15px;
    font-size: 14px;
    line-height: 18px;
    color: #888a8b;
    transition: all 400ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
    cursor: text;
  }
  .form_input[has-value] + .form_label {
    transform: translateY(-10px);
    font-size: 12px;
    line-height: 15px;
  }
  .form_input:-webkit-autofill + .form_label {
    transform: translateY(-10px);
    font-size: 12px;
    line-height: 15px;
  }
  .form_checkbox-container {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
    margin-top: 16px;
  }
  
  .form_checkbox {
    position: absolute;
    left: 0;
    width: 16px;
    height: 16px;
    margin: 0;
    opacity: 0;
    background-color: transparent;
    border-color: transparent;
    outline: none;
  }
  
  .form_checkbox-label {
    position: relative;
    z-index: 10;
    width: 16px;
    height: 16px;
    margin-right: 8px;
    font-size: 0;
    border-radius: 2px;
    border: 1px solid var(--color-border);
  }
  
  .form_checkbox-label > svg {
    position: absolute;
    left: -1px;
    top: -1px;
    color: var(--color-primary-btn-bg);
    opacity: 0;
    transition: opacity 150ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
  }
  
  .form_checkbox:checked + .form_checkbox-label > svg {
    opacity: 1;
  }
  
  .form_checkbox-text {
    font-size: 16px;
    font-weight: 400;
    line-height: 16px;
    color: rgba(159, 159, 159);
  }
  
  .form_submit {
    margin-top: 24px;
    height: 46px;
  }
  .form-tips-text {
    padding: 13px 92px;
    background-color: rgba(255, 240, 240, 1);
    min-height: 42px;
    color: rgba(226, 65, 45, 1);
    margin: 20px 0 16px;
    font-size: 16px;
  }
  .footer_text {
    margin-top: 30px;
    color: rgba(159, 159, 159, 1);
    margin-right: 6px;
    font-size: 16px;
  }
  .footer_text_link {
    color: rgba(41, 41, 41, 1);
    margin-left: 6px;
  }
  .form_item_group {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 0 20px;
    width: 100%;
  }
  .form_item_group .form_item {
    margin-top: 0;
  }
  .form_select-label {
    position: absolute;
    top: 18px;
    right: 16px;
    font-size: 0;
    pointer-events: none;
    transform: rotate(180deg);
  }
  
  .form_select {
    padding: 16px 44px 16px 15px;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }
  
  .address_form spz-area[areacode] {
    position: absolute;
    top: 50%;
    left: 16px;
    transform: translateY(-50%);
    border-right: 1px solid var(--color-border);
  }
  
  .address_form spz-area[areacode] {
    position: absolute;
    top: 50%;
    left: 16px;
    transform: translateY(-50%);
    border-right: 1px solid var(--color-border);
  }
  
  .address_form spz-area[areacode] label {
    position: absolute;
    top: 8px;
    right: 8px;
    font-size: 0;
    pointer-events: none;
    transform: rotate(180deg);
  }
  .address_form spz-area[areacode] select {
    width: 103px;
    margin: 0;
    padding: 7px 32px 7px 0;
    border: none;
    outline: none;
    font-size: 14px;
    line-height: 18px;
    background-color: transparent;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
  }
  
  .address_form spz-area[areacode] label {
    position: absolute;
    top: 8px;
    right: 8px;
    font-size: 0;
    pointer-events: none;
    transform: rotate(180deg);
  }
  
  .address_form .form_input[name="phone"] {
    padding-left: 127px;
  }
  
  .address_form .form_label[for="edit_phone"],
  .address_form .form_label[for="add_phone"] {
    left: 127px;
  }

  .form_checkbox_container {
    position: relative;
    display: flex;
    align-items: center;
    width: 100%;
    padding-top: 16px;
  }
  .form_checkbox {
    position: absolute;
    left: 0;
    width: 16px;
    height: 16px;
    margin: 0;
    opacity: 0;
    background-color: transparent;
    border-color: transparent;
    outline: none;
  }
  .form_checkbox_text {
    font-size: 14px;
    font-weight: 300;
    line-height: 18px;
    color: rgba(159,159,159);
  }
  .address_cencel {
    margin: 30px 0 54px;
    text-transform: capitalize;
  }

  .address_form spz-area[province][count="0"] {
    display: none;
  }
  .form-tips-error {
    color: #E2412D;
    text-align: left;
    display: flex;
    align-items: center;
  }
  .form-tips-error svg {
    margin-right: 4px;
    flex-shrink: 0;
  }

  .hidden_important {
    display: none !important;
  }
  
  @media (max-width: {{settings.breakpoint}}px) {
    .footer_text {
      margin-bottom: 72px;
    }
  }  
</style>

