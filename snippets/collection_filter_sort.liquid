{% if show_sort %}
  <div class="flex md:items-center collection_sort_container">
    <div class="collection_filter_title body-plus-2">{{ 'i18n.collection.collection_detail.sort_by' | t }}</div>
    <div class="filter-item filter_sort_select">
      <select class="body-plus-2 clear" name="sort_by" role="sortBy" {% if isChange %} @change="collection-list.refresh(sort_by=event.value, redo=true);" {% endif %}>
        <option value="manual" selected>{{ 'i18n.collection.collection_detail.recommend' | t }}</option>
        <option value="price-ascending">{{ 'i18n.collection.collection_detail.low_to_high' | t }}</option>
        <option value="price-descending">{{ 'i18n.collection.collection_detail.high_to_low' | t }}</option>
        <option value="published-descending">{{ 'i18n.collection.collection_detail.newest' | t }}</option>
        <option value="best-selling">{{ 'i18n.collection.collection_detail.sales_descending' | t }}</option>
        <option value="add_to_cart_count">{{ 'i18n.collection.collection_detail.add_to_cart_count_descending' | t }}</option>
        <option value="views">{{ 'i18n.collection.collection_detail.views_descending' | t }}</option>
      </select>
    </div>
  </div>
{% endif %}