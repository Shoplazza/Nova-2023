<style>
  .search_container {
    padding-top: 50px;
    padding-bottom: 100px;
  }
  .search_title {
    margin-bottom: 28px;
    order: -3;
  }
  .search-form {
    width: 420px;
    margin-bottom: 52px;
    order: -2;
  }
  .search-form-input {
    padding: 10px;
    padding-right: 12px;
    transition: all 400ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
  }
  .search-form-input:autofill {
    padding-top: 20px;
    padding-bottom: 0;
  }
  .search-form-input:-webkit-autofill {
    padding-top: 20px;
    padding-bottom: 0;
  }
  .search-form-input[has-value] ~ .search-form-label {
    display: none;
  }
  .search-form-input:autofill ~ .search-form-label {
    font-size: 12px;
    line-height: 14px;
    top: 2px;
  }
  .search-form-input:-webkit-autofill ~ .search-form-label {
    font-size: 12px;
    line-height: 14px;
    top: 2px;
  }
  .search-form-submit-btn {
    padding: 9px 23px;
  }
  .search-form-label {
    position: absolute;
    top: 10px;
    left: 10px;
    transition: all 400ms cubic-bezier(0.455, 0.03, 0.515, 0.955);
    cursor: text;
    color: rgba(221, 221, 221);
  }
  .search-form-item {
    height: 46px;
  }
  .search-form-submit-btn {
    height: 48px;
  }
  .search-list {
    gap: 46px 36px;
  }
  .search_total {
    color: rgba(159, 159, 159);
    padding-bottom: 16px;
  }
  .search_load_more {
    outline: 2px solid transparent;
    outline-offset: 2px;
    font-weight: 600;
    padding: 12px 22px;
  }
  .search-list {
    display: grid;
  	grid-template-columns: repeat({{row_product}},minmax(0, 1fr));
  }
  .search_click_btn {
    grid-column-start: span {{row_product}};
  }
  .search-list[finish][nomore] div[role='loadmore']{
    display: none;
  }
  #search-list[data-empty] {
    display: none;
  }
  #search-result-summary {
    order: -1;
  }
  #search-list[data-empty] ~ #search-result-summary-empty {
    display: block !important;
  }
  #search-list[data-empty] ~ #search-result-summary {
    display: none !important;
  }
  @media (max-width: {{ settings.breakpoint }}px) {
    .search_container {
      padding-top: 16px;
      padding-bottom: 58px;
    }
    .search_title {
      margin-bottom: 16px;
    }
    .search-form {
      width: 100%;
      margin-bottom: 0;
    }
    .search_total {
      margin-top: 28px;
      padding-bottom: 0;
    }
    .search-list {
      gap: 24px 15px;
    }
    .search-list {
      grid-template-columns: repeat({{mobile_layout}},minmax(0, 1fr));
    }
    .search_click_btn {
      grid-column-start: span {{mobile_layout}};
    }
  }
</style>
