{% assign image = section.settings.image %}
{% assign image_width = section.settings.image_width %}
{% assign layout = section.settings.layout %}
{% assign enable_image_half_page_width = section.settings.enable_image_half_page_width %}

{% include 'card_spacing_css' %}

<style>
  .fashion_graphic_desc {
    align-items: center;
    margin-top: 16px;
  }

  @media (min-width: {{ settings.breakpoint }}px) {
    .fashion_graphic_img_container {
      width: 50%;
      display: flex;
      justify-content: center;
    }
    .fashion_graphic_outer {
      display: flex;
    }
    [data-section-id="{{ section.id }}"] .fashion_graphic_img {
      width: {% if enable_image_half_page_width %}100%{% else %}{{ image_width }}px{% endif %};
    }
    .fashion_graphic_desc {
      width: 50%;
      align-items: flex-start;
    }

    {% comment %} layout: left {% endcomment %}
    [data-section-id="{{ section.id }}"] .left {
      flex-direction: row;
    }
    [data-section-id="{{ section.id }}"] .left .fashion_graphic_desc {
      padding-left: 60px;
      padding-right: 0;
    }

    {% comment %} layout: right {% endcomment %}
    [data-section-id="{{ section.id }}"] .right {
      flex-direction: row-reverse;
    }
    [data-section-id="{{ section.id }}"] .right .fashion_graphic_desc {
      padding-left: 0;
      padding-right: 60px;
    }
  }
</style>

<div class='fashion_graphic_outer page-container direction_ltr_self {{layout}}'>
  {% include 'global_img', image: image, image_outer: 'fashion_graphic_img_container', image_class: 'fashion_graphic_img' %}
  {% include 'global_text', container_class: 'fashion_graphic_desc' %}
</div>

{% schema %}
{
  "name": "fashion_graphic",
  "max_blocks": 3,
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": {
        "en-US": "Image",
        "zh-CN": "图片"
