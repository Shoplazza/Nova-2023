        {
          "value": "left",
          "label": {
            "en-US": "Image on left",
            "zh-CN": "图片在左"
          }
        },
        {
          "value": "right",
          "label": {
            "en-US": "Image on right",
            "zh-CN": "图片在右"
          }
        }
      ],
      "default": "left"
