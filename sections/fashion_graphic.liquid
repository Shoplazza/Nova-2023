      "blocks": [
        {
          "type": "heading",
          "settings": {
            "heading": "Image with text"
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "Pair large text with an image to tell a story, explain a detail about your product, or describe a new promotion."
          }
        },
        {
          "type": "button",
          "settings": {
            "button_text": "Optional button"
          }
        }
      ]
    }
  ]
}
