{% assign invalid_email_or_phone = 'i18n.customers.order_verify.invalid_email_or_phone' | t %}

{% if order_shipping_phone == nil %}
  {% if param_type == 'history' %}
    {% include 'order_history' %}
  {% else %}
    {% include 'order_view' %}
  {% endif %}
{% else %}
  {% if order_shipping_email %}
    {% include 'order_verify_email' %}
  {% elsif order_shipping_phone %}
    {% include 'order_verify_phone' %}
  {% else %}
    {% include 'order_verify_email' %}
  {% endif %}
{% endif %}

