    {
      "type": "image_picker",
      "id": "image",
      "label": {
        "en-US": "Image",
        "zh-CN": "图片"
      }
    },
    {
      "type": "range",
      "id": "image_width",
      "label": {
        "en-US": "Image width",
        "zh-CN": "PC图片宽度"
