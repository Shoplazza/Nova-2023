<style>
  [data-section-id="{{section.id}}"] {
    color: var(--color-footer-text);
    background-color: var(--color-footer-bg);
  }
  .footer__newsletter,
  .footer_blocks,
  .footer__additional {
    border-top: 1px solid var(--color-footer-border);
