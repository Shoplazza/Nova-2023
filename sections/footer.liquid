          "type": "text",
          "id": "title",
          "label": {
            "zh-CN": "标题",
            "en-US": "Title"
          },
          "default": "",
          "info": {
            "zh-CN": "默认值为菜单标题",
            "en-US": "Defaults to menu title"
          }
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": {
            "zh-CN": "选择菜单",
            "en-US": "Choose a menu"
          },
          "default": {
            "id": "footer",
            "type": "menu",
            "title": {
              "en-US": "Footer menu",
              "zh-CN": "\u9875\u5c3e\u83dc\u5355"
            }
          }
        }
      ]
    },
    {
