{
  "name": "footer",
  "max_blocks": 12,
  "settings": [
    {
      "type": "checkbox",
      "id": "cart_page_display_footer_widgets",
      "label": {
        "zh-CN": "开启购物车页页尾小组件",
        "en-US": "Enable footer widgets in cart page"
      },
      "default": false
    },
    {
      "type": "header",
      "content": {
        "en-US": "Newsletter",
        "zh-CN": "邮件订阅"
      }
    },
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": {
        "zh-CN": "开启邮件订阅",
        "en-US": "Show newsletter signup"
      },
      "default": true
    },
    {
      "type": "textarea",
      "id": "text",
      "label": {
        "zh-CN": "自定义文案",
        "en-US": "Text"
      },
      "default": "Subscribe today to hear first about our sales"
